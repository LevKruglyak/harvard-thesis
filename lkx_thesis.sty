\NewDocumentCommand{\lkxfunc}{ O{->} m m m g g }{
	\begin{array}{rcl}
		\IfNoValueTF {#5} {
			\tl_if_blank:nTF {#2}{}{#2 :}
			#3
			\str_case:nn {#1}
			{
				{->} {\lkxto}
					{~>} {\lkxisom}
					{->>} {\lkxsurj}
			}
			#4
		} {
			\tl_if_blank:nTF {#2}{}{#2 \;:\;}
			#3
		   &
			\str_case:nn {#1}
			{
				{->} {\lkxto}
					{~>} {\lkxisom}
					{->>} {\lkxsurj}
			}
		   & #4
		\\
		#5 & \lkxmapsto & #6
		}
	\end{array}
}

